<UserControl x:Class="CatálogoDeProductos.Views.InicioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatálogoDeProductos.Views"
             xmlns:vm="clr-namespace:CatálogoDeProductos.ViewModel"
             xmlns:p="clr-namespace:CatálogoDeProductos.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>            <RowDefinition MaxHeight="230"></RowDefinition>            <RowDefinition></RowDefinition>        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="55" Height="55"></RowDefinition>
                <RowDefinition MinHeight="150" Height="150"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock Text="{x:Static p:Resources.HomeButton}" FontSize="40" Margin="5,0,0,0" FontWeight="Bold"></TextBlock>
            </Grid>
            <Grid Grid.Row="1">
                <Rectangle Width="270" HorizontalAlignment="Left" Margin="5,0,0,0" RadiusX="10" RadiusY="10">
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FF8E8E8E" Offset="0.43"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Width="270" RadiusX="10" RadiusY="10" Margin="290,0,0,0" HorizontalAlignment="Left">
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FF8E8E8E" Offset="0.43"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Width="270" RadiusX="10" RadiusY="10" Margin="577,0,0,0" HorizontalAlignment="Left">
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FF8E8E8E" Offset="0.43"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="125" MaxHeight="145"></RowDefinition>
                <RowDefinition MinHeight="125" MaxHeight="145"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"></RowDefinition>
                    <RowDefinition ></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock Text="{x:Static p:Resources.ElementText}" FontSize="25" FontWeight="Bold" Margin="5,0,0,0"></TextBlock>
                </Grid>
                <Grid Grid.Row="1">
                    <Rectangle Width="100" HorizontalAlignment="Left" Fill="#FFB5B5B5" Margin="5,0,0,0"/>
                    <Rectangle Width="100" HorizontalAlignment="Left" Fill="#FFB5B5B5" Margin="115,0,0,0"/>
                    <Rectangle Width="100" HorizontalAlignment="Left" Fill="#FFB5B5B5" Margin="225,0,0,0"/>
                    <Rectangle Width="100" HorizontalAlignment="Left" Fill="#FFB5B5B5" Margin="335,0,0,0"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="35"></RowDefinition>
                    <RowDefinition MaxHeight="100"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock Text="{x:Static p:Resources.OtherElementText}" FontSize="25" FontWeight="Bold" Margin="5,0,0,0"></TextBlock>
                </Grid>
                <Grid Grid.Row="1">
                    <Rectangle Width="100" HorizontalAlignment="Left" Fill="#FFB5B5B5" Margin="5,0,0,0"/>
                    <Rectangle Width="100" HorizontalAlignment="Left" Fill="#FFB5B5B5" Margin="115,0,0,0"/>
                    <Rectangle Width="100" HorizontalAlignment="Left" Fill="#FFB5B5B5" Margin="225,0,0,0"/>
                    <Rectangle Width="100" HorizontalAlignment="Left" Fill="#FFB5B5B5" Margin="335,0,0,0"/>
                    <Rectangle Width="100" HorizontalAlignment="Left" Fill="#FFB5B5B5" Margin="445,0,0,0"/>
                    <Rectangle Width="100" HorizontalAlignment="Left" Fill="#FFB5B5B5" Margin="555,0,0,0"/>
                    <Rectangle Width="100" HorizontalAlignment="Left" Fill="#FFB5B5B5" Margin="665,0,0,0"/>
                    <Rectangle Width="100" HorizontalAlignment="Left" Fill="#FFB5B5B5" Margin="775,0,0,0"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
